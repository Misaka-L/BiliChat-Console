<UserControl x:Class="BiliChat_Console.UserControls.Dialog.ImageDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BiliChat_Console.UserControls.Dialog"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid x:Name="Mian" Margin="16" MouseUp="Mian_MouseUp" KeyDown="Mian_KeyDown">
        <Image x:Name="ImageContent" Stretch="Uniform" RenderOptions.BitmapScalingMode="HighQuality"/>
    </Grid>
</UserControl>
