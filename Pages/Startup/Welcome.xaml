<Page x:Class="BiliChat_Console.Pages.Startup.Welcome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BiliChat_Console.Pages.Startup"
      xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Welcome">

    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock Text="BiliChat Console" Style="{StaticResource MaterialDesignHeadline2TextBlock}"/>
        <StackPanel Margin="10" Orientation="Horizontal" HorizontalAlignment="Center">
            <md:PackIcon Kind="Language" VerticalAlignment="Center" Margin="10"/>
            <ComboBox VerticalAlignment="Center" Width="150">
                <ComboBoxItem IsSelected="True" Content="简体中文" />
            </ComboBox>
        </StackPanel>
        <Button x:Name="NextButton" Content="下一步" Click="NextButton_Click"/>
    </StackPanel>
</Page>
